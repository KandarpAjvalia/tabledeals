{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "no-tabs": "off",
        "comma-dangle": "off",
        "react/jsx-filename-extension": [
            1, 
            { "extensions": [".js", ".jsx"] }
        ],
        "react/jsx-indent": [
            "error",
            "tab"
		],
		"react/jsx-indent-props": [
            "error",
            "tab"
        ],
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ]
	},
	"overrides": [
		{
		  "files": [
			"**/*.test.js"
		  ],
		  "env": {
			"jest": true
		  }
		}
	  ]
}
